<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Employee_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DAECDA"
    android:id="@+id/linearLayoutid"
    android:layout_below="@+id/tool_bar"
    >

    <TextView
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textStyle="bold"
        android:id="@+id/d1"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:textSize="24sp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#000000"
        android:id="@+id/dateId"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:textSize="24sp"
        android:layout_toRightOf="@id/d1"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle"
        android:text="LOGGED\nIN"
        android:textSize="30sp"
        android:layout_margin="20dp"

        android:id="@+id/loginout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/d1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_work"
        android:text="Create Work"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginout"
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Title"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Desciption"
            android:textSize="20sp"
            android:hint="Enter Description"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/ll1"
            android:layout_marginBottom="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:id="@+id/update_desc"
            android:background="@drawable/ic_file_upload_black_24dp"
             />
    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="extras"
        android:textSize="30dp"
        android:background="#3517"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/upload"
        android:layout_below="@id/ll1"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload"
        android:id="@+id/pic"/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload"
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/obname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="Title"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:padding="10dp"
            android:id="@+id/ob_upload"
            android:background="@drawable/ic_file_upload_black_24dp"
            />
    </LinearLayout>

</RelativeLayout>



</RelativeLayout>